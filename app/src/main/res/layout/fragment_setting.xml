<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/purewhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/purewhite">

        <ImageView
            android:layout_margin="15sp"
            android:layout_width="match_parent"
            android:layout_height="160sp"
            android:src="@drawable/insta_cash_logo">
        </ImageView>

        <TextView
            android:id="@+id/versionCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black">

        </TextView>
    </LinearLayout>

            <LinearLayout
                android:id="@+id/txt_transaction"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:background="@color/grey"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40sp">
                <TextView
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="serif"
                    android:layout_marginLeft="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transactions">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/inviteAndEarn"
                android:layout_marginTop="4sp"
                android:gravity="center"
                android:background="@color/grey"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40sp">
                <TextView
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="serif"
                    android:layout_marginLeft="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Invite And Earn">

                </TextView>
            </LinearLayout>

<LinearLayout
    android:id="@+id/howsItWork"
    android:layout_marginTop="4sp"
    android:gravity="center"
    android:background="@color/grey"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40sp">
    <TextView
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="serif"
        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How it Works">

    </TextView>
</LinearLayout>



    <LinearLayout
        android:id="@+id/helpSupport"
        android:layout_marginTop="4sp"
        android:gravity="center"
        android:background="@color/grey"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40sp">
        <TextView
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="serif"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help/Support">

        </TextView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/txt_privacy"
        android:layout_marginTop="4sp"
        android:gravity="center"
        android:background="@color/grey"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40sp">
        <TextView

            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="serif"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy Policy">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/txt_termcondition"
        android:layout_marginTop="4sp"
        android:gravity="center"
        android:background="@color/grey"
        android:orientation="horizontal"
        android:layout_marginBottom="15sp"
        android:layout_width="match_parent"
        android:layout_height="40sp">
        <TextView
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="serif"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms &amp; Conditions">

        </TextView>
    </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>