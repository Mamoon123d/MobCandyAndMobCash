<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_10sdp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_30sdp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/app_icon" />

            <TextView
                android:id="@+id/appCompatTextView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_16sdp"
                android:fontFamily="@font/unicaone"
                android:text="@string/app_name"
                android:textColor="@color/purewhite"
                android:textSize="55sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/normalTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Login with your credentials"
                android:textColor="#ffff"
                android:textSize="20sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/email_img"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_email" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/emailEt"
                    android:layout_width="@dimen/x0"
                    android:layout_height="wrap_content"
                    android:hint="@string/email_id"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/s16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/email_img"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/pass_img"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_pass" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/passEt"
                    android:layout_width="@dimen/x0"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/s16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/pass_img"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/errorTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:textAlignment="center"
                android:textColor="#E53935"
                android:textSize="@dimen/s16" />

            <TextView
                android:id="@+id/loginBt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20"
                android:background="@drawable/bg_btn"
                android:paddingVertical="@dimen/x6"
                android:text="@string/login"
                android:textAlignment="center"
                android:textColor="@color/purewhite"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/Terms"
                android:layout_below="@+id/login_content"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:text="@string/by_continuing"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvTerms"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#2196F3"
                    android:text="@string/termofservices"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_below="@+id/Terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:text="and"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvPrivacy"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#2196F3"
                    android:text="@string/privacypolicy"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>