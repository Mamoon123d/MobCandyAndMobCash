<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey">

    <TextView
        android:textColor="@color/black"
        android:id="@+id/Title"
        android:layout_marginLeft="10dp"
        android:paddingTop="8dp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fantastic OfferWall"
        android:textSize="17sp"
        >
    </TextView>


    <LinearLayout
        android:id="@+id/offerWall"
        android:background="@color/purewhite"
        android:layout_below="@+id/Title"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fantasticOfferWall"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_weight="0.2"
                android:src="@drawable/star">
            </ImageView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="@color/black"
                    android:layout_marginLeft="2dp"
                    android:paddingTop="8dp"
                    android:id="@+id/appTitle"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fantastic OfferWall"
                    android:textSize="16sp"
                    >

                </TextView>
                <TextView
                    android:textColor="#757575"
                    android:id="@+id/descriptions"
                    android:fontFamily="serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Unlimited Coins. Complete Tasks"
                    android:textSize="12sp"
                   >

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:gravity="center"
                    android:layout_margin="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_weight="0.1"
                    android:padding="6sp"
                    android:src="@drawable/fire">
                </ImageView>
            </LinearLayout>

        </LinearLayout>
        <View
            android:background="#c0c0c0"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </View>

        <LinearLayout
            android:id="@+id/pollfish_survey"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_weight="0.2"
                android:src="@drawable/rewarded_survey">
            </ImageView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/black"
                    android:layout_marginLeft="2dp"
                    android:layout_width="match_parent"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Rewarded Survey"
                    android:textSize="16sp"
                    >

                </TextView>

                <TextView
                    android:textColor="#757575"
                    android:fontFamily="serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Unlimited Coins. Complete Survey"
                    android:textSize="12sp"
                    >

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:gravity="center"
                    android:layout_margin="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_weight="0.1"
                    android:padding="6sp"
                    android:src="@drawable/money">
                </ImageView>
            </LinearLayout>

        </LinearLayout>
        <View
            android:background="#c0c0c0"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </View>

        <LinearLayout
            android:id="@+id/superOfferWall"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_weight="0.2"
                android:src="@drawable/shopping_icon">
            </ImageView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Shopping Wall"
                    android:textSize="16sp"
                    >

                </TextView>

                <TextView
                    android:textColor="#757575"
                    android:fontFamily="serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Highly Rewarded Offers. Unlimited"
                    android:textSize="12sp"
                    >

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:gravity="center"
                    android:layout_margin="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_weight="0.1"
                    android:padding="6sp"
                    android:src="@drawable/superwall">
                </ImageView>
            </LinearLayout>

        </LinearLayout>
        <View
            android:background="#c0c0c0"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </View>

        <LinearLayout
            android:layout_marginBottom="@dimen/_5sdp"
            android:id="@+id/watchVideos"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_weight="0.2"
                android:src="@drawable/watchvideos">
            </ImageView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/black"
                    android:layout_marginLeft="2dp"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Watch Videos"
                    android:textSize="16sp"
                    >

                </TextView>

                <TextView
                    android:textColor="#757575"
                    android:fontFamily="serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Get Coins Per Video View"
                    android:textSize="12sp"
                    >

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:gravity="center"
                    android:layout_margin="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_weight="0.1"
                    android:padding="6sp"
                    android:src="@drawable/play">
                </ImageView>
            </LinearLayout>

        </LinearLayout>
<!--        <View-->
<!--            android:background="#c0c0c0"-->
<!--            android:layout_marginTop="6dp"-->
<!--            android:layout_marginBottom="6dp"-->
<!--            android:layout_marginLeft="20dp"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="1dp">-->
<!--        </View>-->

    </LinearLayout>

    <TextView
        android:textColor="@color/black"
        android:id="@+id/starterTasks"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:layout_below="@+id/offerWall"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Starter Tasks"
        android:textSize="17sp"
        >
    </TextView>

    <LinearLayout
        android:layout_marginTop="10sp"
        android:background="@color/purewhite"
        android:layout_below="@+id/starterTasks"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/inviteFriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:padding="4dp"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:src="@drawable/invite">

            </ImageView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Invite Friends"
                    android:textSize="16sp"
                    >

                </TextView>

                <TextView
                    android:textColor="#757575"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="serif"
                    android:text="Invite Your Friends And Get Coins"
                    android:textSize="12sp"
                    >

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:background="@drawable/drawable_round_bg_yellow"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:gravity="center"
                android:layout_height="30sp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_share">
                </ImageView>
            </LinearLayout>

        </LinearLayout>
        <View
            android:background="#c0c0c0"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </View>

        <LinearLayout
            android:id="@+id/reviewTask"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:padding="4dp"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:src="@drawable/review">

            </ImageView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Review Task"
                    android:textSize="18sp"
                    >

                </TextView>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Give Review And Get Coins"
                    android:textSize="13sp"
                    >

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:background="@color/yellow"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:gravity="center"
                android:layout_height="30sp">
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="20dp"
                   android:src="@drawable/reviewstar">
               </ImageView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/completeProfileTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:padding="4dp"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:src="@drawable/completetaskicon">

            </ImageView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Complete Profile Task"
                    android:textSize="16sp"
                    >

                </TextView>

                <TextView
                    android:textColor="#757575"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="serif"
                    android:text="Complete Profile Task And Get Coins"
                    android:textSize="12sp"
                    >

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:background="@drawable/drawable_round_bg_yellow"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:gravity="center"
                android:layout_height="30sp">
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:text="20 Coins"
                    android:textAlignment="center"
                    android:textColor="@color/purewhite"
                    android:textSize="12sp"
                    >
                </TextView>
            </LinearLayout>

        </LinearLayout>
        <View
            android:background="#c0c0c0"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </View>

        <LinearLayout
            android:id="@+id/facebookTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.recyclerview.widget.RecyclerView
                android:background="@color/purewhite"
                android:id="@+id/recylerStarter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>



    </LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/loader_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        app:indicatorColor="@color/colorPrimaryDark"
        app:indicatorName="BallPulseIndicator" />



</RelativeLayout>

</ScrollView>