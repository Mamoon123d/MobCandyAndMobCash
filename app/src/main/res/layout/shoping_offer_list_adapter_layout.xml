<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <com.google.android.material.card.MaterialCardView
        android:background="@color/purewhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        app:cardElevation="4sp"
        app:cardCornerRadius="4sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purewhite"
        android:orientation="vertical"
        android:layout_margin="4dp"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginRight="5dp"
                android:id="@+id/offer_image"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".7"
                android:scaleType="fitXY"
                android:src="@drawable/placeholder" />

            <LinearLayout
                android:layout_margin="@dimen/_4sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/offer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="offer title"
                    android:textSize="17sp"
                    android:fontFamily="serif"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/offer_category"
                    android:layout_width="match_parent"
                    android:textSize="12dp"
                    android:textColor="@color/text_grey"
                    android:fontFamily="serif"
                    android:layout_height="wrap_content"
                    android:text="Fashion" />

            </LinearLayout>

            <TextView
                android:gravity="center|left"
                android:textSize="11sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_star"
                android:drawablePadding="3dp"
                android:text="@string/editorpics"
                android:textColor="@color/red" />
        </LinearLayout>

        <TextView
            android:id="@+id/offer_short_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="serif"
            android:text="uptooff"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/indian_note"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <TextView
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:id="@+id/offer_cashback"
                android:fontFamily="serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="uptocashback"
                android:textColor="@color/darkgreen"
                android:textStyle="bold" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_success"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:textColor="@color/text_grey"
                android:text="Success"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_user_visit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="serif"
                android:textColor="@color/text_grey"
                android:text="User's Today"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="serif"
                android:textColor="@color/text_grey"
                android:text="Verified Offers"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>